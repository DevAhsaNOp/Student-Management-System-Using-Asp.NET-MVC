    <table style="background: #78d4ef !important; width: 760px !important;">
        <tr>
            <th class="tdata" style="color: black !important;">Subject</th>
            <th class="tdata" style="color: black !important;">Session</th>
        </tr>
        <tr>
            @if (Model.IsMaths.Value == true)
            {
                <td class="tda">
                    Maths
                </td>
                <td class="tda">
                    @Html.DisplayFor(model => model.IsMathsSlot)
