@model Student_Management_System.Context.class_routine

@{
    ViewBag.Title = "Class Routine Details";
}

<style>
    dt {
        color: white !important;
        text-align: left !important;
        font-size: 18px !important;
        width: 220px !important;
    }

    .dl-horizontal dd {
        margin-left: 200px !important;
        color: white !important;
        text-align: left !important;
        font-size: 18px !important;
        width: 768px !important;
    }

    a {
        color: #d9d9d9 !important;
    }

        a:hover {
            color: #fff !important;
        }

    .tda {
        font-size: 16px !important;
        color: #6c6c6c !important;
        text-align: center !important;
        font-weight: 900;
    }

    .tdata {
        font-size: 18px !important;
    }
</style>

<h2>Class @Html.DisplayFor(model => model.@class.name) @Html.DisplayFor(model => model.@class.section) Routine Detail</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.rou_day)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rou_day)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.@class.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.@class.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.@class.section)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.@class.section)
        </dd>

    </dl>
</div>

